%table.table
  %tr
    %th
      Item
    %th
      Unit Price
    %th
      Quantity
    %th
      Total
    %th
      Remove
  - @cart_hash.each do |hash|
    %tr
      %td
        = hash[:name]
      %td
        = hash[:price]
      %td
        = hash[:order]
      %td
        = hash[:item_price]
      %td
        = link_to "[X]", "/remove_item_from_cart?id=#{hash[:id]}", :remote=>true, :class => "disable_cart_link"
  %tr
    %td
    %td
    %td
      %b Total Price
    %td{:colspan => 4}
      = @total

